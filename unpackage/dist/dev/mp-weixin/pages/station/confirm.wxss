.confirm-container {
  padding: 20rpx 30rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}
.station-info {
  text-align: center;
  padding: 20rpx 0;
}
.station-info .station-name {
  font-size: 40rpx;
  font-weight: bold;
}
.station-info .gun-info {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}
.station-info .gun-info .gun-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
}
.price-card {
  text-align: center;
}
.price-card .price {
  font-size: 48rpx;
  font-weight: bold;
  color: #fa5151;
}
.price-card .price .unit {
  font-size: 28rpx;
  margin-left: 5rpx;
}
.price-card .period {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}
.card-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.enterprise-card .wallet-details {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333;
}
.payment-card .payment-options {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}
.payment-card .payment-options .option {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  border: 1px solid #eee;
  border-radius: 10rpx;
}
.payment-card .payment-options .option.active {
  border-color: #1989fa;
  background-color: #e6f2ff;
  color: #1989fa;
  font-weight: bold;
}
.payment-card .charge-setting {
  text-align: center;
}
.payment-card .charge-setting slider {
  margin-top: 20rpx;
}
.payment-card .prepay-amounts .amount-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}
.payment-card .prepay-amounts .amount-grid .amount-item {
  text-align: center;
  padding: 20rpx 0;
  border: 1px solid #eee;
  border-radius: 10rpx;
}
.payment-card .prepay-amounts .amount-grid .amount-item.active {
  border-color: #1989fa;
  background-color: #e6f2ff;
  color: #1989fa;
  font-weight: bold;
}
.payment-card .prepay-amounts .custom-amount-input {
  margin-top: 20rpx;
  padding: 20rpx;
  border: 1px solid #eee;
  border-radius: 10rpx;
  text-align: center;
}
.payment-card .prepay-amounts .custom-amount-input:focus {
  border-color: #1989fa;
}
.footer-button {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-top: 1px solid #f1f1f1;
}
.footer-button .charge-button {
  background-color: #1989fa;
  color: #fff;
  border-radius: 50rpx;
  font-size: 32rpx;
}
.footer-button .charge-button:active {
  background-color: #1378d4;
}