
.container.data-v-f0ec609e {
		background: linear-gradient(180deg, #F6F8FB 0%, #FFFFFF 100%);
		min-height: 100vh;
		padding-top: 140rpx;
		padding-bottom: 220rpx;
		position: relative;
}
	
	/* 顶部信息栏 */
.top-info.data-v-f0ec609e {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 20rpx 24rpx;
		margin-top: 20rpx;
		margin-bottom: 20rpx;
}
.station-name.data-v-f0ec609e {
		font-size: 26rpx;
		color: #666;
		font-weight: 400;
}
.license-plate.data-v-f0ec609e {
		font-size: 26rpx;
		color: #666;
		font-weight: 400;
}
	
	/* 背景装饰图 */
.bg-decoration.data-v-f0ec609e {
		position: absolute;
		top: 200rpx;
		right: -50rpx;
		width: 350rpx;
		height: 250rpx;
		opacity: 0.08;
		z-index: 1;
		pointer-events: none;
}
.bg-image.data-v-f0ec609e {
		width: 100%;
		height: 100%;
}
	
	/* 充电枪卡片容器 */
.guns-container.data-v-f0ec609e {
		padding: 0 24rpx;
		z-index: 2;
		position: relative;
}
.gun-card.data-v-f0ec609e {
		background: linear-gradient(135deg, rgba(45, 85, 232, 0.02) 0%, rgba(255, 255, 255, 0.9) 100%);
		-webkit-backdrop-filter: blur(10px);
		        backdrop-filter: blur(10px);
		border-radius: 20rpx;
		padding: 28rpx;
		margin-bottom: 24rpx;
		border: 1rpx solid rgba(45, 85, 232, 0.1);
		box-shadow: 0 8rpx 32rpx rgba(45, 85, 232, 0.08);
		position: relative;
		overflow: hidden;
}
.gun-card.data-v-f0ec609e::before {
		content: '';
		position: absolute;
		top: 0;
		right: 0;
		width: 200rpx;
		height: 40rpx;
		background: linear-gradient(45deg, transparent 30%, rgba(45, 85, 232, 0.1) 50%, transparent 70%);
		transform: skewX(-20deg);
}
	
	/* 充电枪卡片头部 */
.gun-header.data-v-f0ec609e {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 32rpx;
}
.gun-title.data-v-f0ec609e {
		display: flex;
		align-items: center;
		gap: 12rpx;
}
.gun-icon.data-v-f0ec609e {
		width: 40rpx;
		height: 40rpx;
		display: flex;
		align-items: center;
		justify-content: center;
		background: rgba(45, 85, 232, 0.1);
		border-radius: 10rpx;
}
.gun-icon-img.data-v-f0ec609e {
		width: 24rpx;
		height: 24rpx;
}
.gun-text.data-v-f0ec609e {
		font-size: 32rpx;
		font-weight: 600;
		color: #1a1a1a;
}
.estimate-time.data-v-f0ec609e {
		font-size: 26rpx;
		color: #2D55E8;
		font-weight: 500;
		background: rgba(45, 85, 232, 0.1);
		padding: 6rpx 16rpx;
		border-radius: 20rpx;
}
	
	/* 充电枪卡片内容 */
.gun-content.data-v-f0ec609e {
		display: flex;
		align-items: center;
		gap: 40rpx;
}
	
	/* 圆环进度条 */
.progress-container.data-v-f0ec609e {
		flex-shrink: 0;
}
.circular-progress.data-v-f0ec609e {
		width: 160rpx;
		height: 160rpx;
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
}
.progress-inner.data-v-f0ec609e {
		width: 120rpx;
		height: 120rpx;
		background: #fff;
		border-radius: 50%;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
.soc-value.data-v-f0ec609e {
		font-size: 36rpx;
		font-weight: 700;
		color: #2D55E8;
		line-height: 1;
}
.soc-unit.data-v-f0ec609e {
		font-size: 20rpx;
		color: #666;
		margin-top: 4rpx;
}
	
	/* 数据显示区域 */
.data-container.data-v-f0ec609e {
		flex: 1;
		display: flex;
		flex-direction: column;
		gap: 24rpx;
}
.data-row-main.data-v-f0ec609e {
		display: flex;
		gap: 32rpx;
}
.data-item.data-v-f0ec609e {
		flex: 1;
		text-align: center;
}
.data-value.data-v-f0ec609e {
		display: block;
		font-size: 32rpx;
		font-weight: 700;
		color: #1a1a1a;
		margin-bottom: 8rpx;
}
.data-label.data-v-f0ec609e {
		font-size: 24rpx;
		color: #666;
		font-weight: 400;
}
.data-row-detail.data-v-f0ec609e {
		display: flex;
		gap: 8rpx;
}
.data-item-small.data-v-f0ec609e {
		flex: 1;
		text-align: center;
		background: rgba(45, 85, 232, 0.05);
		padding: 20rpx 50rpx;
		border-radius: 12rpx;
		min-width: 0;
}
.data-value-small.data-v-f0ec609e {
		display: block;
		font-size: 28rpx;
		font-weight: 600;
		color: #2D55E8;
		margin-bottom: 6rpx;
}
.data-label-small.data-v-f0ec609e {
		font-size: 20rpx;
		color: #666;
		font-weight: 400;
		white-space: nowrap;
}
	
	/* 底部容器 */
.footer-container.data-v-f0ec609e {
		position: fixed;
		left: 0;
		bottom: 0;
		width: 100%;
		background: linear-gradient(180deg, rgba(255, 255, 255, 0.9) 0%, #FFFFFF 100%);
		-webkit-backdrop-filter: blur(20px);
		        backdrop-filter: blur(20px);
		border-top: 1rpx solid rgba(45, 85, 232, 0.1);
		border-top-left-radius: 48rpx;
		border-top-right-radius: 48rpx;
		padding: 16rpx 20rpx;
		z-index: 10;
		box-sizing: border-box;
}
.total-info.data-v-f0ec609e {
		display: flex;
		justify-content: space-between;
		margin-bottom: 20rpx;
		padding: 16rpx 20rpx;
		background: rgba(45, 85, 232, 0.05);
		border-radius: 12rpx;
		box-sizing: border-box;
}
.total-item.data-v-f0ec609e {
		text-align: center;
		flex: 1;
}
.total-value.data-v-f0ec609e {
		display: block;
		font-size: 28rpx;
		font-weight: 700;
		color: #2D55E8;
		margin-bottom: 6rpx;
}
.total-label.data-v-f0ec609e {
		font-size: 22rpx;
		color: #666;
		font-weight: 400;
}
.end-button.data-v-f0ec609e {
		height: 72rpx;
		border-radius: 36rpx;
		font-size: 28rpx;
		font-weight: 600;
		margin-bottom: 12rpx;
		border: none;
		box-shadow: 0 4rpx 16rpx rgba(45, 85, 232, 0.3);
		width: 100%;
		box-sizing: border-box;
}
.footer-tip.data-v-f0ec609e {
		display: block;
		text-align: center;
		font-size: 20rpx;
		color: #999;
		line-height: 1.4;
		margin-bottom: 6rpx;
}
.safe-area.data-v-f0ec609e {
		height: env(safe-area-inset-bottom);
}
	
	/* 响应式适配 */
@media (max-width: 375px) {
.container.data-v-f0ec609e {
			padding-bottom: 200rpx;
}
.gun-content.data-v-f0ec609e {
			flex-direction: column;
			gap: 20rpx;
}
.data-row-main.data-v-f0ec609e {
			justify-content: center;
}
.footer-container.data-v-f0ec609e {
			padding: 12rpx 16rpx;
}
.total-info.data-v-f0ec609e {
			padding: 12rpx 16rpx;
			margin-bottom: 16rpx;
}
.total-value.data-v-f0ec609e {
			font-size: 24rpx;
			margin-bottom: 4rpx;
}
.total-label.data-v-f0ec609e {
			font-size: 20rpx;
}
.end-button.data-v-f0ec609e {
			height: 64rpx;
			font-size: 26rpx;
}
.bg-decoration.data-v-f0ec609e {
			width: 280rpx;
			height: 200rpx;
			top: 180rpx;
}
}
