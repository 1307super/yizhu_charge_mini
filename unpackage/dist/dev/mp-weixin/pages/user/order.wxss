
.container.data-v-0f0c1843 {
		background: linear-gradient(180deg, #F6F8FB 0%, #FFFFFF 100%);
		min-height: 100vh;
		padding-top: 140rpx;
		padding-bottom: 40rpx;
}
	
	/* 顶部tab */
.tabs-container.data-v-0f0c1843 {
		display: flex;
		background: #FFFFFF;
		padding: 20rpx 0;
		margin: 0 24rpx 20rpx;
		border-radius: 16rpx;
		box-shadow: 0 4rpx 20rpx rgba(45, 85, 232, 0.08);
		position: relative;
}
.tab-item.data-v-0f0c1843 {
		flex: 1;
		display: flex;
		flex-direction: column;
		align-items: center;
		padding: 20rpx 0;
		position: relative;
		cursor: pointer;
}
.tab-text.data-v-0f0c1843 {
		font-size: 28rpx;
		color: #666;
		font-weight: 500;
		transition: all 0.3s ease;
}
.tab-item.active .tab-text.data-v-0f0c1843 {
		color: #2D55E8;
		font-weight: 600;
}
.tab-line.data-v-0f0c1843 {
		position: absolute;
		bottom: 0;
		left: 50%;
		transform: translateX(-50%);
		width: 60rpx;
		height: 6rpx;
		background: linear-gradient(90deg, #2D55E8 0%, #5B7BF7 100%);
		border-radius: 3rpx;
}
	
	/* 内容区域 */
.content-container.data-v-0f0c1843 {
		background: #FFFFFF;
		margin: 0 24rpx;
		border-radius: 20rpx 20rpx 0 0;
		padding: 32rpx 24rpx;
		min-height: calc(100vh - 300rpx);
		box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}
	
	/* 订单数量统计 */
.order-count-section.data-v-0f0c1843 {
		margin-bottom: 32rpx;
		padding-bottom: 24rpx;
		border-bottom: 2rpx solid #F5F5F5;
}
.count-text.data-v-0f0c1843 {
		font-size: 26rpx;
		color: #666;
		font-weight: 500;
}
	
	/* 订单列表 */
.order-list.data-v-0f0c1843 {
		display: flex;
		flex-direction: column;
		gap: 24rpx;
}
.order-card.data-v-0f0c1843 {
		background: linear-gradient(135deg, rgba(45, 85, 232, 0.02) 0%, rgba(255, 255, 255, 0.9) 100%);
		border-radius: 20rpx;
		padding: 28rpx;
		border: 2rpx solid rgba(45, 85, 232, 0.1);
		box-shadow: 0 8rpx 32rpx rgba(45, 85, 232, 0.08);
		position: relative;
		overflow: hidden;
		transition: all 0.3s ease;
}
.order-card.data-v-0f0c1843:active {
		transform: scale(0.98);
		box-shadow: 0 4rpx 16rpx rgba(45, 85, 232, 0.12);
}
.order-card.data-v-0f0c1843::before {
		content: '';
		position: absolute;
		top: 0;
		right: 0;
		width: 160rpx;
		height: 30rpx;
		background: linear-gradient(45deg, transparent 30%, rgba(45, 85, 232, 0.08) 50%, transparent 70%);
		transform: skewX(-20deg);
}
	
	/* 卡片头部 */
.card-header.data-v-0f0c1843 {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 24rpx;
}
.station-name.data-v-0f0c1843 {
		font-size: 32rpx;
		font-weight: 600;
		color: #1a1a1a;
		max-width: 400rpx;
		overflow: hidden;
		text-overflow: ellipsis;
		white-space: nowrap;
}
.status-badge.data-v-0f0c1843 {
		padding: 8rpx 20rpx;
		border-radius: 20rpx;
		background: rgba(45, 85, 232, 0.1);
}
.status-badge.status-ongoing.data-v-0f0c1843 {
		background: linear-gradient(45deg, rgba(68, 229, 144, 0.15), rgba(112, 202, 243, 0.15));
}
.status-badge.status-completed.data-v-0f0c1843 {
		background: linear-gradient(45deg, rgba(45, 85, 232, 0.15), rgba(91, 123, 247, 0.15));
}
.status-badge.status-closed.data-v-0f0c1843 {
		background: rgba(153, 153, 153, 0.15);
}
.status-text.data-v-0f0c1843 {
		font-size: 24rpx;
		font-weight: 500;
		color: #2D55E8;
}
.status-ongoing .status-text.data-v-0f0c1843 {
		color: #44E590;
}
.status-completed .status-text.data-v-0f0c1843 {
		color: #2D55E8;
}
.status-closed .status-text.data-v-0f0c1843 {
		color: #999;
}
	
	/* 卡片内容 */
.card-content.data-v-0f0c1843 {
		margin-bottom: 20rpx;
}
.info-row.data-v-0f0c1843 {
		display: flex;
		margin-bottom: 16rpx;
}
.info-row.data-v-0f0c1843:last-child {
		margin-bottom: 0;
}
.info-item.data-v-0f0c1843 {
		flex: 1;
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
}
.info-item.single.data-v-0f0c1843 {
		flex: none;
		width: 50%;
		margin: 0 auto;
}
.info-label.data-v-0f0c1843 {
		font-size: 24rpx;
		color: #666;
		margin-bottom: 8rpx;
		font-weight: 400;
}
.info-value.data-v-0f0c1843 {
		font-size: 28rpx;
		color: #1a1a1a;
		font-weight: 600;
}
.info-value.price.data-v-0f0c1843 {
		color: #2D55E8;
}
	
	/* 分割线 */
.card-divider.data-v-0f0c1843 {
		height: 2rpx;
		background: linear-gradient(90deg, transparent 0%, rgba(45, 85, 232, 0.2) 50%, transparent 100%);
		margin: 20rpx 0 16rpx;
}
	
	/* 卡片底部 */
.card-footer.data-v-0f0c1843 {
		display: flex;
		justify-content: center;
}
.start-time.data-v-0f0c1843 {
		font-size: 22rpx;
		color: #999;
		font-weight: 400;
}
	
	/* 加载更多 */
.load-more.data-v-0f0c1843 {
		text-align: center;
		padding: 40rpx 0;
}
.load-text.data-v-0f0c1843 {
		font-size: 24rpx;
		color: #999;
}
	
	/* 空状态 */
.empty-state.data-v-0f0c1843 {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		padding: 120rpx 0;
}
.empty-text.data-v-0f0c1843 {
		font-size: 28rpx;
		color: #999;
		font-weight: 400;
}
	
	/* 响应式适配 */
@media (max-width: 375px) {
.container.data-v-0f0c1843 {
			padding-bottom: 20rpx;
}
.tabs-container.data-v-0f0c1843 {
			margin: 0 16rpx 16rpx;
			padding: 16rpx 0;
}
.tab-text.data-v-0f0c1843 {
			font-size: 26rpx;
}
.content-container.data-v-0f0c1843 {
			margin: 0 16rpx;
			padding: 24rpx 20rpx;
}
.order-card.data-v-0f0c1843 {
			padding: 24rpx;
}
.station-name.data-v-0f0c1843 {
			font-size: 28rpx;
			max-width: 300rpx;
}
.info-value.data-v-0f0c1843 {
			font-size: 26rpx;
}
.info-label.data-v-0f0c1843 {
			font-size: 22rpx;
}
}
