
.container.data-v-3d2f76ce {
	background-color: #f6f6f6;
	min-height: 100vh;
	padding-bottom: 120rpx;
	padding-top: 130rpx;
}
.form-container.data-v-3d2f76ce {
	padding: 30rpx;
}
.form-section.data-v-3d2f76ce {
	background-color: white;
	border-radius: 16rpx;
	padding: 30rpx;
	margin-bottom: 30rpx;
	box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}
.section-title.data-v-3d2f76ce {
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
	margin-bottom: 30rpx;
	display: block;
}
.form-item.data-v-3d2f76ce {
	margin-bottom: 40rpx;
}
.form-item.data-v-3d2f76ce:last-child {
	margin-bottom: 0;
}
.label.data-v-3d2f76ce {
	display: block;
	font-size: 30rpx;
	color: #333;
	margin-bottom: 20rpx;
}
.required.data-v-3d2f76ce {
	color: #ff4444;
}
.input.data-v-3d2f76ce {
	width: 100%;
	height: 88rpx;
	padding: 0 24rpx;
	border: 1rpx solid #E5E7EB;
	border-radius: 12rpx;
	font-size: 30rpx;
	background-color: #F9FAFB;
	box-sizing: border-box;
}
.input.data-v-3d2f76ce:focus {
	border-color: #2D55E8;
	background-color: white;
}
.default-option.data-v-3d2f76ce {
	padding: 20rpx 0;
}
.radio-group.data-v-3d2f76ce {
	display: flex;
	gap: 32rpx;
}
.radio-item.data-v-3d2f76ce {
	display: flex;
	align-items: center;
	padding: 16rpx;
	border-radius: 12rpx;
	cursor: pointer;
	transition: background-color 0.2s;
}
.radio-item.active.data-v-3d2f76ce {
	/* 移除背景色 */
}
.radio-icon.data-v-3d2f76ce {
	width: 36rpx;
	height: 36rpx;
	border: 2rpx solid #ddd;
	border-radius: 50%;
	margin-right: 16rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}
.radio-item.active .radio-icon.data-v-3d2f76ce {
	border-color: #2D55E8;
}
.radio-checked.data-v-3d2f76ce {
	width: 20rpx;
	height: 20rpx;
	background-color: #2D55E8;
	border-radius: 50%;
}
.radio-text.data-v-3d2f76ce {
	font-size: 30rpx;
	color: #333;
}
.radio-item.active .radio-text.data-v-3d2f76ce {
	color: #2D55E8;
}
.checkbox-item.data-v-3d2f76ce {
	display: flex;
	align-items: center;
	padding: 16rpx;
	cursor: pointer;
}
.checkbox-icon.data-v-3d2f76ce {
	width: 36rpx;
	height: 36rpx;
	border: 2rpx solid #ddd;
	border-radius: 8rpx;
	margin-right: 16rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	background-color: white;
}
.checkbox-checked.data-v-3d2f76ce {
	color: white;
	font-size: 24rpx;
	font-weight: bold;
}
.checkbox-item.checked .checkbox-icon.data-v-3d2f76ce {
	background-color: #2D55E8;
	border-color: #2D55E8;
}
.checkbox-text.data-v-3d2f76ce {
	font-size: 30rpx;
	color: #333;
}
.invoice-type-display.data-v-3d2f76ce {
	padding: 24rpx;
	background-color: #f5f5f5;
	border-radius: 12rpx;
	border: 1rpx solid #e5e5e5;
}
.invoice-type-text.data-v-3d2f76ce {
	font-size: 30rpx;
	color: #666;
}
.footer.data-v-3d2f76ce {
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	background-color: white;
	padding: 20rpx 30rpx;
	padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
	border-top: 1rpx solid #eee;
	z-index: 999;
}
.save-btn.data-v-3d2f76ce {
	height: 88rpx;
	line-height: 88rpx;
	font-size: 32rpx;
	font-weight: 600;
	border-radius: 44rpx;
}
